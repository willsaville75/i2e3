{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "text": {
      "type": "string",
      "title": "Avatar Text",
      "description": "Text to display in avatar (usually initials)"
    },
    "backgroundColor": {
      "type": "string",
      "title": "Background Color",
      "description": "Tailwind CSS background color class",
      "default": "bg-gray-500"
    },
    "textColor": {
      "type": "string",
      "title": "Text Color",
      "description": "Tailwind CSS text color class",
      "default": "text-white"
    },
    "size": {
      "type": "string",
      "title": "Size",
      "description": "Avatar size",
      "enum": ["sm", "md", "lg"],
      "default": "md"
    },
    "className": {
      "type": "string",
      "title": "CSS Classes",
      "description": "Additional CSS classes"
    }
  },
  "required": ["text"]
} 